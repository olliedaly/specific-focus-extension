{
    "manifest_version": 3,
    "name": "Specific Focus",
    "version": "0.2.0",
    "description": "Monitors web pages for relevance to your current focus, with advanced SPA support.",
    "permissions": [
      "storage",
      "tabs",
      "scripting",
      "activeTab",
      "webNavigation",
      "alarms",
      "notifications"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*",
      "http://localhost:5001/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["lib/Readability.js", "content.js"],
        "run_at": "document_idle"
      }
    ]
  }