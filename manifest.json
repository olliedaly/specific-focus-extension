{
    "manifest_version": 3,
    "name": "Specific Focus",
    "version": "0.2.0",
    "description": "Monitors web pages for relevance to your current focus, with advanced SPA support.",
    "permissions": [
      "storage",
      "tabs",
      "activeTab",
      "webNavigation",
      "alarms",
      "notifications",
      "identity",
      "payments"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*",
      "https://specific-focus-backend-1056415616503.europe-west1.run.app/*"
    ],
    "oauth2": {
      "client_id": "1056415616503-jagk9ejnakcq643so5dsfvsoagjppfac.apps.googleusercontent.com",
      "scopes": [
        "email",
        "profile"
      ]
    },
    "background": {
      "service_worker": "background.js"
    },
    "externally_connectable": {
      "matches": ["https://apis.google.com/*"]
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["lib/Readability.js", "content.js"],
        "run_at": "document_idle",
        "exclude_matches": [
          "*://localhost/*",
          "*://127.0.0.1/*",
          "*://*.local/*",
          "*://specific-focus-backend-1056415616503.europe-west1.run.app/upgrade*",
          "*://specific-focus-backend-1056415616503.europe-west1.run.app/payment-success*"
        ]
      }
    ],
    "key": ""
  }